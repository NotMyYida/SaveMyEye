<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- СДЕЛАТЬ КАСТОМНЫЕ ВЬЮШКИ ДЛЯ ЭЛЕМЕНТОВ МЕНЮ -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/common_gap"
            android:textStyle="italic"
            android:text="@string/navigation_label_text"
            android:textColor="@android:color/white"
            android:textSize="30dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="@dimen/common_gap"
            android:background="@color/accent_color" />

        <com.dosssik.andrey.savemyeye.wiget.RippleView
            android:id="@+id/nav_menu_info_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/nv_menu_item_info"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_information_outline" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/nv_menu_item_info"
                android:gravity="center"
                android:text="@string/nav_menu_info_label"
                android:textSize="16sp" />

        </com.dosssik.andrey.savemyeye.wiget.RippleView>

        <com.dosssik.andrey.savemyeye.wiget.RippleView
            android:id="@+id/nav_menu_settings_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/nv_menu_item_settings"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_nav_settings" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/nv_menu_item_settings"
                android:gravity="center"
                android:text="@string/nav_menu_label"
                android:textSize="16sp" />

        </com.dosssik.andrey.savemyeye.wiget.RippleView>


        <LinearLayout
            android:id="@+id/nav_settings_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/common_gap"
            android:layout_marginStart="@dimen/common_gap"
            android:orientation="vertical"
            android:visibility="gone">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Header" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="First field" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Second Field" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Third field" />
            </LinearLayout>
        </LinearLayout>

        <com.dosssik.andrey.savemyeye.wiget.RippleView
            android:id="@+id/nav_menu_rate_item"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/nv_menu_item_rate"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_centerVertical="true"
                android:layout_marginEnd="24dp"
                android:layout_marginLeft="24dp"
                android:layout_marginRight="24dp"
                android:layout_marginStart="24dp"
                android:src="@drawable/ic_thumb_up" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/nv_menu_item_rate"
                android:gravity="center"
                android:text="@string/nav_menu_rate_label"
                android:textSize="16sp" />

        </com.dosssik.andrey.savemyeye.wiget.RippleView>


    </LinearLayout>

</ScrollView>